@{
    Layout = null;
}
@model Branch
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit this Branch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3B1E54;
            --secondary-color: #F5F5F5;
        }

        body {
            background-color: var(--secondary-color);
            font-family: 'Arial', sans-serif;
        }

        .page-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 1rem;
        }

        .form-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 2rem;
        }

        .form-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .submit-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 6px rgba(59, 30, 84, 0.2);
        }

            .submit-btn:hover {
                background-color: #5a2e82;
                transform: translateY(-2px);
                box-shadow: 0 6px 8px rgba(59, 30, 84, 0.3);
            }

        @@media (max-width: 768px) {
            .page-container {
                margin: 1rem;
                padding: 0.5rem;
            }

            .form-container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="form-container">
            <h2 class="form-title">
                <i class="bi bi-building-add"></i> Edit Branch
            </h2>
            <form method="post" asp-action="EditBranch" asp-controller="Admin" asp-route-id="@Model.BranchId">
                <div class="mb-3">
                    <label for="branchName" class="form-label">Branch Name</label>
                    <input type="text" class="form-control" asp-for="Name" id="branchName" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="branchLocation" class="form-label">Location</label>
                    <input type="text" class="form-control" asp-for="Location" id="branchLocation" required>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="branchContact" class="form-label">Contact Number</label>
                    <input type="tel" class="form-control" asp-for="ContactNumber" id="branchContact" required>
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
                <input type="hidden" class="form-control" asp-for="BranchId" value="@Model.BranchId">
                <button type="submit" class="btn submit-btn w-100 py-2 rounded-pill">
                    <i class="bi bi-save"></i> Save Branch
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

@{
    Layout = null; // Disable layout for this page
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    @* Optional: Add your custom styles here *@
    @section Styles {
        <style>
            .container {
                max-width: 600px;
                margin: 0 auto;
            }

            h1 {
                font-size: 3rem;
                color: #dc3545;
            }

            .lead {
                font-size: 1.25rem;
                color: #6c757d;
            }

            .btn {
                width: 200px;
            }
        </style>
    }
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="text-danger">Access Denied</h1>
        <p class="lead">Sorry, you do not have permission to view this page.</p>

        <div class="mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Go to Homepage</a>
        </div>

        <div class="mt-3">
            <p>Or, if you need to login, click here:</p>
            <a href="@Url.Action("Login", "Pharmacist")" class="btn btn-secondary">Login</a>
        </div>
    </div>

    <!-- Optional: Add Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>

@{
    Layout = null;
}
@model Graduation_Project.ViewModels.UserRegisterViewModel

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #f4f6f9;
            font-family: 'Cairo', 'Tajawal', Arial, sans-serif;
        }

        .registration-container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            height: 100%;
        }

        .registration-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
        }

        .registration-image {
            max-width: 80%;
            max-height: 500px;
            object-fit: contain;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-top: 20px;
        }

        .registration-form-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: auto;
            padding: 30px;
            min-height: 300px;
        }

        .registration-form {
            width: 100%;
            max-width: 400px;
            margin-top: 10px;
        }

        .form-control {
            text-align: left;
            background-color: #f8f9fa;
            border: none;
            border-bottom: 2px solid #6a1b9a;
            border-radius: 0;
            padding-right: 0;
        }

        .form-control:focus {
            box-shadow: none;
            border-bottom-color: #4a148c;
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #6a1b9a;
            border: none;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #4a148c;
        }

        .form-label {
            color: #6a1b9a;
            font-weight: 600;
            text-align: left;
        }

        media (max-width: 768px) {
            .registration-image-container {
                display: none;
            }

            .registration-form-container {
                width: 100%;
                padding: 20px;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container-fluid registration-container">
        <div class="row w-100">

            <!-- Image Section -->
            <div class="col-md-6 registration-image-container d-none d-md-flex justify-content-end">
                <img src="@Url.Content("~/images/user.jpg")" alt="User Registration" class="registration-image" />
            </div>

            <!-- Form Section -->
            <div class="col-md-6 registration-form-container">
                <div class="registration-form">
                    <h2 class="text-center mb-4" style="color: #6a1b9a;">User Registration</h2>

                    <form method="post" asp-action="Register" asp-controller="User">

                        <!-- General Error Message (if any) -->
                        <span asp-validation-summary="ModelOnly" class="text-danger"></span>

                        <div class="mb-3">
                            <label for="FullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="FullName" name="FullName"
                                   value="@Model.FullName" required
                                   asp-validation-for="FullName" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="Email" name="Email"
                                   value="@Model.Email" required
                                   asp-validation-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber"
                                   value="@Model.PhoneNumber" required
                                   asp-validation-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <textarea class="form-control" id="Address" name="Address"
                                      required asp-validation-for="Address">@Model.Address</textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password"
                                   required
                                   asp-validation-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword"
                                   name="ConfirmPassword" required
                                   asp-validation-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="text-muted">
                                Already have an account?
                                <a href="@Url.Action("Login", "User")" class="text-decoration-none">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

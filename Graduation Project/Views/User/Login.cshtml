@{
    Layout = null;
}
@model Graduation_Project.ViewModels.UserLogin

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #f4f6f9;
            font-family: 'Cairo', 'Tajawal', Arial, sans-serif;
        }

        .login-container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            height: 100%;
        }

        .login-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
        }

        .login-image {
            max-width: 80%;
            max-height: 500px;
            object-fit: contain;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-top: 20px;
        }

        .login-form-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: auto;
            padding: 30px;
            min-height: 300px;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
            margin-top: 10px;
        }

        .form-control, .form-select {
            text-align: left;
            background-color: #f8f9fa;
            border: none;
            border-bottom: 2px solid #6a1b9a;
            border-radius: 0;
            padding-right: 0;
        }

        .form-control:focus, .form-select:focus {
            box-shadow: none;
            border-bottom-color: #4a148c;
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #6a1b9a;
            border: none;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #4a148c;
        }

        .form-label {
            color: #6a1b9a;
            font-weight: 600;
            text-align: left;
        }

        media (max-width: 768px) {
            .login-image-container {
                display: none;
            }

            .login-form-container {
                width: 100%;
                padding: 20px;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row w-100">

            <!-- Image Section -->
            <div class="col-md-6 login-image-container d-none d-md-flex justify-content-end">
                <img src="@Url.Content("~/images/user.jpg")" alt="User Login" class="login-image" />
            </div>

            <!-- Form Section -->
            <div class="col-md-6 login-form-container">
                <div class="login-form">
                    <h2 class="text-center mb-4" style="color: #6a1b9a;">User Login</h2>

                    <form method="post" asp-action="Login" asp-controller="User">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input type="email" asp-for="Email" class="form-control" id="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" id="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Remember Me</label>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="text-muted">
                                Don't have an account?
                                <a href="@Url.Action("Register", "User")" class="text-decoration-none">Register here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model GroupMedicine

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Medicine Group</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background: linear-gradient(45deg, #6f42c1, #a0a7ff);
            padding: 0;
            margin: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            max-width: 600px;
            width: 100%;
            padding: 30px;
            border-radius: 15px;
            background-color: #ffffff;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-title {
            font-size: 30px;
            font-weight: 700;
            color: #6f42c1;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #ddd;
            box-shadow: none;
            padding: 12px;
            font-size: 1.1rem;
        }

            .form-control:focus {
                border-color: #6f42c1;
                box-shadow: 0 0 8px rgba(111, 66, 193, 0.5);
            }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            background: linear-gradient(45deg, #6f42c1, #a0a7ff);
            border: none;
            color: white;
            border-radius: 10px;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #5a32a3, #8c8bff);
                cursor: pointer;
            }

        .upload-icon {
            font-size: 1.5rem;
            color: #6f42c1;
        }

        .text-muted {
            font-size: 0.9rem;
            color: #6c757d;
            text-align: center;
            margin-top: 5px;
        }

        .custom-file-label {
            font-size: 1.1rem;
        }

    </style>
</head>

<body>

    <div class="container">
        <div class="card">
            <h3 class="card-title">Edit Medicine Group</h3>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form method="post" enctype="multipart/form-data" asp-action="EditGroup">
                <div class="form-group">
                    <label for="groupName" class="form-label">Group Name</label>
                    <input type="text" class="form-control" id="groupName" name="Name" value="@Model.Name" required>
                </div>

                <div class="form-group">
                    <label for="groupImage" class="form-label">Group Image</label>
                    <input type="file" class="form-control" id="groupImage" name="Image" accept="image/*">
                    <small class="text-muted">Current image: <img src="@Model.ImageUrl" alt="Current Image" style="max-width: 100px; max-height: 100px; margin-top: 10px;" /></small>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
